{
  "name": "@eo-locale/core",
  "version": "1.0.4",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "postbuild": "copyup \"./src/**/*.flow\" ./dist && size-limit",
    "build": "rm -rf dist --scripts-prepend-node-path && rollup --config ./rollup.config.js",
    "preversion": "flow && npm run test && npm run build",
    "test": "jest --detectOpenHandles --config ./config/jest.config.json --no-cache"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "1.2kb",
      "webpack": false
    }
  ],
  "keywords": [
    "internationalization",
    "intl",
    "messageformat",
    "plural",
    "icu",
    "tiny",
    "i18n"
  ],
  "author": {
    "name": "Maksim Sharipov",
    "url": "https://github.com/pret-a-porter"
  },
  "license": "ISC",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^2.1.6",
    "@types/jest": "^24.0.12",
    "copyfiles": "^2.1.0",
    "flow-bin": "^0.110.0",
    "jest": "^24.8.0",
    "rollup": "^1.11.3",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.24.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  }
}
